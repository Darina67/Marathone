<Page x:Class="Marathone.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marathone"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="AuthorizationPage" Height="315" Width="900">

    <Grid Margin="0,0,0,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="619*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="101*"/>

            <RowDefinition Height="120*"/>
            <RowDefinition Height="108*"/>

            <RowDefinition Height="171*"/>
        </Grid.RowDefinitions>


        <Button Name="BtnFirst" Click="BtnFirst_Click" Grid.Row="0" Content="Я хочу стать бегуном" FontSize="26" Width="400" Height="50"/>
        <Button Name="BtnSecond" Click="BtnSecond_Click" Grid.Row="1" Content="Я хочу стать спонсором бегуна" FontSize="26" Width="400" Height="50" />
        <Button Name="BtnThird" Click="BtnThird_Click" Grid.Row="2" Content="Я хочу узнать больше о событии" FontSize="26" Width="400" Height="50" />
        <Button Content="Login" Grid.Row="3" Name="BtnLogin" Click="BtnLogin_Click" FontSize="26" Width="150" Height="50"  HorizontalAlignment="Right" Margin="20" />
    </Grid>
</Page>
